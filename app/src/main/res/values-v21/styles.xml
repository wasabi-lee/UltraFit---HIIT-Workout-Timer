<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme_light" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">@font/roboto_regular</item>

        <item name="android:windowBackground">@color/windowBackground_light</item>
        <item name="bottomsheet_background_drawable">@drawable/bottomsheet_background_light</item>
        <item name="card_background_drawable">@drawable/card_background_light</item>

        <item name="android:textColor">@color/textColor_light</item>
        <item name="header_text_color">@color/colorAccent_header</item>

        <item name="transparent_toolbar_style">@style/transparent_toolbar_style_light</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/statusbar_background</item>
        <item name="button_accent_style">@style/button_accent_light</item>

        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_black</item>

        <item name="preferenceTheme">
            @style/PreferenceThemeOverlay.v14.Material
        </item>
    </style>

    <style name="AppTheme_dark" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">@font/roboto_regular</item>

        <item name="android:windowBackground">@color/windowBackground_dark</item>
        <item name="bottomsheet_background_drawable">@drawable/bottomsheet_background_dark</item>
        <item name="card_background_drawable">@drawable/card_background_dark</item>

        <item name="android:textColor">@color/textColor_dark</item>
        <item name="header_text_color">@color/colorAccent</item>

        <item name="transparent_toolbar_style">@style/transparent_toolbar_style_dark</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/statusbar_background</item>
        <item name="button_accent_style">@style/button_accent_dark</item>

        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_black</item>

        <item name="preferenceTheme">
            @style/PreferenceThemeOverlay.v14.Material
        </item>
    </style>

</resources>