<resources>

    <!-- Base application theme. -->
    <style name="AppTheme_light" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">@font/roboto_regular</item>

        <item name="android:windowBackground">@color/windowBackground_light</item>
        <item name="card_background_drawable">@drawable/card_background_light</item>

        <item name="android:textColor">@color/textColor_light</item>
        <item name="header_text_color">@color/colorAccent_header_light</item>

        <item name="transparent_toolbar_style">@style/transparent_toolbar_style_dark</item>
        <item name="button_accent_style">@style/button_accent_light</item>

        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_black</item>

        <item name="preferenceTheme">
            @style/PreferenceThemeOverlay.v14.Material
        </item>

    </style>


    <style name="AppTheme_dark" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">@font/roboto_regular</item>

        <item name="android:windowBackground">@color/windowBackground_light</item>
        <item name="card_background_drawable">@drawable/card_background_dark</item>

        <item name="android:textColor">@color/textColor_dark</item>
        <item name="header_text_color">@color/colorAccent</item>

        <item name="transparent_toolbar_style">@style/transparent_toolbar_style_dark</item>
        <item name="button_accent_style">@style/button_accent_dark</item>

        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_white</item>

        <item name="preferenceTheme">
            @style/PreferenceThemeOverlay.v14.Material
        </item>

    </style>


    <!-- attrs -->

    <attr name="transparent_toolbar_style" format="reference" />
    <attr name="button_accent_style" format="reference" />

    <attr name="card_background_drawable" format="reference" />

    <attr name="header_text_color" format="reference" />


    <!-- Widget styles -->

    <style name="editText_normal" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_bold_italic</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="editText_title" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="editText_large" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">@dimen/spacing_no_spacing</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="button_accent_light">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/rounded_button_accent</item>
        <item name="android:textColor">@color/textColor_light</item>
    </style>

    <style name="button_accent_dark">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/rounded_button_accent</item>
        <item name="android:textColor">@color/textColor_dark</item>
    </style>


    <style name="transparent_toolbar_style_light" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="transparent_toolbar_style_dark" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>


    <!-- Text styles -->

    <style name="toolbarTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="workoutSettingHeaderTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="presetHeaderTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>


    <style name="timerSessionNameTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="timerTimeTextStyle">
        <item name="android:textSize">70sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="timerRoundsTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>


    <style name="BoldXxLargeTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="SemiBoldXxLargeTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="RegularXxLargeTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>


    <style name="BoldXLargeTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="SemiBoldXLargeTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="RegularXLargeTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>


    <style name="BoldLargeTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="SemiBoldLargeTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="RegularLargeTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="BoldLargeItalicTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_bold_italic</item>
    </style>


    <style name="BoldMediumTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="SemiBoldMediumTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="RegularMediumTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="BoldMediumItalicTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_bold_italic</item>
    </style>


    <style name="BoldSmallTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="SemiBoldSmallTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="RegularSmallTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="BoldSmallItalicTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_bold_italic</item>
    </style>


    <style name="secondaryMediumRegularTextStyle">
        <item name="android:textColor">@color/secondaryGray</item>
    </style>

    <style name="AppTheme_light.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme_light.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
